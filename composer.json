{
    "name": "flutterwavedev/woocommerce",
    "description": "The Official Flutterwave Woocommerce Plugin",
    "type": "wordpress-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Flutterwave\\Woocommerce\\": "includes/"
        }
    },
    "authors": [
        {
            "name": "Flutterwave Developers"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "woocommerce/woocommerce-sniffs": "^0.1.3",
        "yoast/phpunit-polyfills": "^1.0",
        "phpunit/phpunit": "7.5.20"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --coverage=coverage --coverage-text",
        "standards:check": "./vendor/bin/phpcs --standard=WordPress --extensions=php --ignore=*/vendor/*,*/tests/*,*/data/*,*/assets/* .",
        "standards:fix": "./vendor/bin/phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/*,*/tests/*,*/data/*,*/assets/* .",
        "phpcompatibility:check": "./vendor/bin/phpcs --standard=PHPCompatibilityWP --extensions=php --ignore=vendor/* .",
        "phpcompatibility:fix": "./vendor/bin/phpcbf --standard=PHPCompatibilityWP --extensions=php --ignore=*/vendor/*,*/tests/*,*/data/*,*/assets/* .",
        "phpcompatibility:check:php-7-2": "./vendor/bin/phpcs --runtime-set testVersion 7.2- --standard=PHPCompatibilityWP --extensions=php --ignore=vendor/* .",
        "woocommerce:check": [
            "./vendor/bin/phpcs --standard=Woocommerce-Core --extensions=php --ignore=*/vendor/*,*/tests/*,*/data/*,*/assets/* ."
        ],
        "makepot-audit": [
            "wp --allow-root i18n make-pot . --exclude=\".github,.wordpress-org,bin,node_modules,tests,docs\" --slug=woocommerce-rave --debug"
        ],
        "makepot": [
            "@makepot-audit --skip-audit"
        ]
    },
    "extra": {
        "scripts-description": {
            "test": "Run unit tests",
            "standards:check": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
            "standards:fix": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
            "makepot-audit": "Generate i18n/languages/woocommerce-rave.pot file and run audit",
            "makepot": "Generate i18n/languages/woocommerce-rave.pot file"
        }
    }
}
